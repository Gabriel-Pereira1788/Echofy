{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/package-lock.json": true,
    "**/Gemfile": true,
    "**/Gemfile.lock": true,
    "**/.watchmanconfig": true,
    "**/index.js": true,
    "**/.bundle": true,
    "**/.node-version": true
  }
}
